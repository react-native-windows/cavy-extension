{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "jsx": "react-native",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
